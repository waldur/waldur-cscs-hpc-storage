# General Configuration
# ---------------------
# Enable verbose logging
DEBUG=false

# JSON dictionary mapping storage system keys (from Waldur) to Offering Slugs
# Example: '{"capstor": "cscs-capstor-offering"}'
STORAGE_SYSTEMS='{"capstor": "cscs-capstor-offering", "vast": "cscs-vast-offering", "iopsstor": "cscs-iopsstor-offering"}'

# Waldur API Configuration
# ------------------------
# URL of the Waldur Mastermind API
WALDUR_API_URL=https://waldur.example.com/api/
# Access token for a Service Provider user in Waldur
WALDUR_API_TOKEN=your-waldur-api-token
# Verify SSL certificates for Waldur API connection
WALDUR_VERIFY_SSL=true
# Optional SOCKS proxy for Waldur connection (e.g. socks5://localhost:1080)
WALDUR_SOCKS_PROXY=
# Optional custom User-Agent header
WALDUR_AGENT_HEADER=

# Authentication Configuration
# ----------------------------
# DANGER: Disables all incoming authentication. FOR DEVELOPMENT ONLY.
DISABLE_AUTH=false
# Keycloak URL for validating tokens
CSCS_KEYCLOAK_URL=https://auth-tds.cscs.ch/auth/
# Keycloak Realm
CSCS_KEYCLOAK_REALM=cscs
# Required: Client ID to validate 'aud' claim
CSCS_KEYCLOAK_CLIENT_ID=
# Required: Client Secret for intospection
CSCS_KEYCLOAK_CLIENT_SECRET=

# HPC User API Configuration
# --------------------------
# Base URL of the CSCS HPC User API (GID Service)
HPC_USER_API_URL=https://api-user.hpc.cscs.ch/
# Client ID for machine-to-machine authentication
HPC_USER_CLIENT_ID=your-client-id
# Client Secret for machine-to-machine authentication
HPC_USER_CLIENT_SECRET=your-client-secret
# OIDC Token Endpoint to fetch machine token
HPC_USER_OIDC_TOKEN_URL=https://auth.cscs.ch/auth/realms/cscs/protocol/openid-connect/token
# OIDC Scope (default: openid)
HPC_USER_OIDC_SCOPE=openid
# Optional SOCKS proxy for HPC User API connection
HPC_USER_SOCKS_PROXY=
# If true, uses mock GIDs when API is unreachable (Dev only)
HPC_USER_DEVELOPMENT_MODE=false

# Backend / Storage Logic
# -----------------------
# Storage filesystem identifier (e.g. lustre, gpfs)
STORAGE_FILE_SYSTEM=lustre
# Inodes per TB calculation base
INODE_BASE_MULTIPLIER=1000000
# Soft quota multiplier (must be < hard coefficient)
INODE_SOFT_COEFFICIENT=1.33
# Hard quota multiplier
INODE_HARD_COEFFICIENT=2.0
# Use mock target items for development (skips actual GID resolution if enabled?)
# Note: Behavior depends on implementation of Orchestrator
USE_MOCK_TARGET_ITEMS=false

# Sentry Configuration (Optional)
# --------------------
# Sentry DSN for error tracking
SENTRY_DSN=
# Environment tag (e.g. production, staging)
SENTRY_ENVIRONMENT=production
# Performance tracing sample rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=1.0
