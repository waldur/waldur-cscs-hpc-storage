# Example configuration for CSCS HPC Storage Sync Script
offerings:
  - name: "Example CSCS HPC Storage Offering"
    waldur_api_url: "http://localhost:8081/api/"
    waldur_api_token: "CHANGE_ME"
    waldur_offering_uuid: "CHANGE_ME"
    backend_type: "cscs-hpc-storage"
    backend_settings:
      storage_file_system: "lustre" # Storage file system type
      inode_soft_coefficient: 1.33 # Soft inode limit multiplier
      inode_hard_coefficient: 2.0 # Hard inode limit multiplier
      use_mock_target_items: false # Use real targetItem data from backend_metadata
      unix_gid_field: "unix_gid" # Field name in project backend_metadata for Unix GID
      development_mode: false # Enable development mode with fallback mock GID values
    backend_components:
      - storage
